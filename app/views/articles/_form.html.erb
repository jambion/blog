<% if @article.errors.any? %>
<h2>The following errors occurred</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  
<% end %>

<%= simple_form_for @article do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :tag_list %>
    <%= f.button :submit %>
<% end %>